---
import { type Lang, defaultLang, translations } from '../i18n/translations';

interface Props {
  lang?: Lang;
}

const lang = Astro.props.lang ?? defaultLang;
const t = translations[lang].hero;
const base = import.meta.env.BASE_URL;
---

<section class="relative min-h-screen flex items-center justify-center px-4 sm:px-6 lg:px-8 overflow-hidden">
  <!-- Background Video -->
  <div class="absolute inset-0 z-0 flex items-center justify-center bg-slate-950">
    <video 
      src={`${base}/demo.mp4`}
      autoplay 
      loop 
      muted 
      playsinline
      class="max-w-full max-h-full opacity-95"
    ></video>
    <div class="absolute inset-0 bg-gradient-to-b from-slate-900/20 via-slate-900/30 to-slate-900"></div>
  </div>
  
  <!-- Content -->
  <div class="relative z-10 max-w-4xl mx-auto text-center py-20">
    <!-- Eyebrow Badge -->
    <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-slate-800/80 border border-slate-700/50 mb-8 backdrop-blur-sm">
      <span class="w-2 h-2 rounded-full bg-emerald-500"></span>
      <span class="text-sm text-slate-300">{t.badge}</span>
      <span class="text-xs text-slate-500">Â·</span>
      <span class="text-xs text-emerald-400">{t.version}</span>
    </div>
    
    <!-- Main Headline -->
    <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold tracking-tight mb-6">
      <span class="text-white">{t.title1}</span>
      <span class="text-blue-400"> {t.title2}</span>
    </h1>
    
    <!-- Subtitle -->
    <p class="text-lg sm:text-xl text-slate-300 max-w-2xl mx-auto mb-10">
      {t.subtitle}
    </p>
    
    <!-- CTAs -->
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
      <a 
        href="https://cortex.deeprat.tech"
        target="_blank"
        rel="noopener noreferrer"
        class="w-full sm:w-auto px-8 py-4 bg-blue-500 hover:bg-blue-400 text-white font-semibold rounded-lg transition-all duration-200 text-center shadow-lg shadow-blue-500/25 hover:shadow-blue-400/40 hover:scale-[1.02] active:scale-[0.98]"
      >
        {t.cta.demo}
      </a>
      <a 
        href="https://github.com/DeepRatAI/cortex-knowledge-assistant"
        target="_blank"
        rel="noopener noreferrer"
        class="w-full sm:w-auto px-8 py-4 bg-slate-800/80 backdrop-blur-sm text-white font-medium rounded-lg border border-slate-600 hover:border-slate-500 hover:bg-slate-700/80 transition-all duration-200 text-center flex items-center justify-center gap-2 hover:scale-[1.02] active:scale-[0.98]"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        {t.cta.github}
      </a>
    </div>
  </div>
</section>
